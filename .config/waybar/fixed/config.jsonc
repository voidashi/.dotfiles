{
    "height": 30,
    "spacing": 0,
    "margin": "0",
    "position": "top",
    "modules-left": [
        "sway/workspaces",
        "sway/mode",
        "sway/scratchpad",
        "hyprland/workspaces",
        "hyprland/submap",
        "custom/media"
    ],
    "modules-center": [
        "sway/window",
        "hyprland/window"
    ],
    "modules-right": [
        "tray",
        "custom/notification",
        "backlight",
        "network",
        "mpd",
        "pulseaudio",
        "battery",
        "battery#bat2",
        "clock",
        "custom/power"
    ],


    // Window Manager Modules
    "sway/workspaces": {
        "disable-scroll": true,
        "all-outputs": true,
        "format": "{icon}",
        "format-icons": {
            "1": "",
            "2": "",
            "3": "",
            "4": "",
            "5": "",
            "urgent": "",
            "default": ""
        }
    },
    "sway/mode": {
        "format": "<span style=\"italic\">{}</span>"
    },
    "sway/window": {
        "format": "{}",
        "max-length": 50,
        "all-outputs": true,
        "offscreen-css": true,
        "offscreen-css-text": "Inactive",
        "rewrite": {
            "(.*) - Mozilla Firefox": "$1",
            "(.*) - fish": "> [$1]"
        }
    },
    "sway/scratchpad": {
        "format": "{icon} {count}",
        "show-empty": false,
        "format-icons": ["", ""],
        "tooltip": true,
        "tooltip-format": "{app}: {title}"
    },

    // Hyprland Modules
    "hyprland/workspaces": {
        "disable-scroll": true,
        "all-outputs": true,
        "format": "{icon}",
        "format-icons": {
            // "1": "Ôâ®",
            // "2": "ÔÑ†",
            // "3": "ÔÑ°",
            // "4": "ÔÜº",
            // "5": "ÔÅµ",
            // "urgent": "ÔÅ™",
            // "focused": "ÔÜí",
            // "default": "ÔÑë"
        },
        "persistent-workspaces": {
            "1": [], "2": [], "3": [], "4": [], "5": []
        }
    },
    "hyprland/window": {
        "format": "{}",
        "max-length": 50,
        "all-outputs": true,
        "offscreen-css": true,
        "offscreen-css-text": "Inactive",
        "rewrite": {
            "(.*) - Mozilla Firefox": "$1",
            "(.*) - Zen Browser": "ÔÇ¨ $1",
            "(.*) - fish": "> [$1]"
        },
        "separate-outputs": true
    },

    "hyprland/submap": {
        "format": "‚úåÔ∏è {}",
        "max-length": 8,
        "tooltip": false
    },

    // System Modules
    "clock": {
        "tooltip-format": "<big>{:%Y %B}</big>\n<tt><small>{calendar}</small></tt>",
        "format-alt": "{:%d-%m-%Y}",
        "format": "{:%H:%M}"
    },
    "backlight": {
